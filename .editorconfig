root = true

[*]
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 4

[*.{c,h,awk,w32,bat,mk,Makefile,frag,zep,lemon,re}]
charset                  = utf-8
indent_style             = tab
tab_width                = 4
trim_trailing_whitespace = true

[*.{yml,m4,sh,json,xml}]
charset                  = utf-8
indent_size              = 2
trim_trailing_whitespace = true

[*.{php,phpt}]
charset                  = utf-8
trim_trailing_whitespace = true

[*.md]
charset                  = utf-8
trim_trailing_whitespace = false
